<div class='row'>
  <div class='col-sm-6'>
    <%= f.input :content, as: :text, input_html: { rows: 12 }, wrapper: :vertical_form %>
    <p><%= link_to 'Markdown guide', 'http://govspeak-preview.herokuapp.com/guide', target: '_blank'  %></p>
  </div>
  <div class='col-sm-6'>
    <%= f.label :preview, required: false %>
    <div class='well' data-preview='govspeak' data-preview-for='#section_note_content'>
      <%= @section_note.preview %>
    </div>
  </div>
</div>

<div>
  <%= f.button :submit, data: { 'disable-with' => 'Working' } %>
  <%= link_to "Back", :back, class: 'btn' %>
</div>
