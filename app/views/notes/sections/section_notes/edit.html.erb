<div class="page-header">
  <h1>
    Edit Section Note

    <%= link_to "Remove", notes_section_section_note_path(@section), method: :delete, data: { confirm: 'Are you sure?', disable: 'Working'}, class: 'btn btn-small btn-danger pull-right' %>
</h1>
</div>


<%= simple_form_for @section_note, url: notes_section_section_note_url(@section)  do |f| %>
  <%= f.input 'section_title', disabled: true, input_html: { value: @section.title } %>

  <%= render 'fields', f: f %>
<% end %>
