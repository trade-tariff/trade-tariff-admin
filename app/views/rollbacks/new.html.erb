<div class="page-header">
  <h1>New Rollback</h1>
</div>

<%= simple_form_for @rollback do |f| %>
  <%= f.input :reason, as: :text %>
  <%= f.input :date, as: :string, label: 'Rollback to (date)',  input_html: { 'data-behaviour' => 'datepicker' } %>
  <%= f.input :keep,
              as: :boolean,
              label: 'Keep',
              hint: 'Keeps update files and records since specified date and just mark them pending' %>

  <div>
    <%= f.button :submit, data: { 'disable-with' => 'Working' } %>
    <%= link_to "Back", :back, class: 'btn' %>
  </div>
<% end %>
