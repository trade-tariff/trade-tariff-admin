<h2>
  Manage Green Lanes Exemptions
</h2>

<% if policy(GreenLanes::Exemption).create? %>
  <%= link_to 'Add a Exemption', new_green_lanes_exemption_path, class: 'govuk-button' %>
<% end %>

<% if @exemptions.any? %>
  <table>
    <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @exemptions.each do |ex| %>
      <tr id="<%= dom_id(ex) %>">
        <td><%= ex.code %></td>
        <td><%= ex.description %></td>
        <td>
          <% if policy(ex).update? %>
            <%= link_to 'Edit',
                        edit_green_lanes_exemption_path(ex) %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @exemptions %>
<% else %>
  <div class="govuk-inset-text">
    <p>No any Green Lanes Exception</p>
  </div>
<% end %>
