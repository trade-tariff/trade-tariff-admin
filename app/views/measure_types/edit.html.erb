<div class="page-header">
  <h1>Edit Measure Type</h1>
</div>

<%= simple_form_for measure_type, url: measure_type_path(measure_type) do |f| %>
  <div class='row'>
    <div class='col-sm-6'>
      <%= f.input :description, as: :text, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, class: 'btn btn-warning', data: { 'disable-with' => 'Working' } %>
    <%= link_to "Back", :back, class: 'btn' %>
  </div>
<% end %>
